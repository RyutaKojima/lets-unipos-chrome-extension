{
  "name": "Let's Unipos",
  "description" : "Uniposのポイント消費促進拡張",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "16": "img/icon_16.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "permissions": [
    "notifications",
    "alarms",
    "tabs"
  ],
  "background": {
    "persistent": false,
    "scripts": [
      "js/background_script.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://unipos.me/*"
      ],
      "js": [
        "js/content_script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/options.html",
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": "img/icon_16.png"
  }
}